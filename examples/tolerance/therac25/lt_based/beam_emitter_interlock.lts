// the main therac-25 machine. essentially, we model the beam.
// the operator cannot see this.
XRAY_MODE = (
      x -> XRAY_MODE
    | e -> ELECTRON_MODE
    | fireBeam -> fireXray -> XRAY_MODE
),
ELECTRON_MODE = (
      x -> rotate -> XRAY_MODE
    | e -> ELECTRON_MODE
    | fireBeam -> fireElectron -> ELECTRON_MODE
).
